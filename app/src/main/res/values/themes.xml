<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MamamApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.MamamApp" parent="Base.Theme.MamamApp" />

    <style name="Theme.MamamApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/mamamApp</item>
    </style>

    <style name="mamamApp" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_corner_light</item>
    </style>

    <style name="Bottom_Corner_Radius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
    </style>

    <style name="search_view">
        <item name="android:background">@drawable/bg_search_corner_light</item>
    </style>
</resources>